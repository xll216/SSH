<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
        "http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>

    <package name="day01" extends="struts-default">
        <action name="sayHello"
                class="com.lanou.action.HelloAction"
                method="sayHello">
            <result name="success">/success.jsp</result>
        </action>

    </package>

    <!--针对用户的相关操作
    namespace：区分访问地址-->
    <package name="user" extends="struts-default" namespace="/user">
        <!--添加用户-->
        <action name="add_User"
                class="com.lanou.action.UserAction"
                method="addUser">
            <result name="add">/success.jsp</result>
        </action>
        <!--删除用户-->
        <action name="delete_User"
                class="com.lanou.action.UserAction"
                method="deleteUser">
            <result name="delete">/success.jsp</result>
        </action>

    </package>

    <package name="user1" extends="struts-default" namespace="/user1">
        <action name="*_User"
                class="com.lanou.action.UserAction"
                method="{1}User">
            <result name="{1}">/success.jsp</result>
            <result name="error">/error.jsp</result>
        </action>
    </package>

    <package name="custom" extends="struts-default" namespace="/custom">
        <!--全局结果集，针对的是某个packag-->
        <global-results>
            <result name="error">/error.jsp</result>
        </global-results>

        <!--method默认执行动作类的execute方法-->
        <action name="custom"
                class="com.lanou.action.CustomAction">
            <param name="username">大王</param>
            <!--type:
            dispatcher：转发到一个jsp页面，默认情况下
            chain：转发到另一个action动作中
            redirect：重定向到一个jsp页面
            redirectAction：重定向到一个action动作中-->
            <result name="success" type="redirectAction">
                <param name="namespace">/user</param>
                <param name="actionName">add_User</param>
            </result>
            <result name="error">/error.jsp</result>
        </action>

        <action name="custom1"
                class="com.lanou.action.CustomAction"
                method="customGlobleResult">
        </action>
    </package>

    <package name="demo" extends="json-default">
        <action name="json" class="com.lanou.action.JsonAction">
            <result name="success" type="json">
                <param name="root">studentList</param>
                <param name="includeProperties">
                    \[\d\]\.name
                </param>
            </result>
        </action>

    </package>

</struts>